-- Day 8
-- Convert all patient names to uppercase.
Select upper(name) as Capital_lettered_Name from Patients;

-- Find the length of each staff member's name.
SELECT staff_name, LENGTH(REPLACE(Staff_name, ' ', '')) AS name_length_without_space FROM staff;

-- Concatenate staff_id and staff_name with a hyphen separator.
Select concat(Staff_id,"-",staff_name) from staff;

-- Daily Challenge
(Create a patient summary that shows patient_id, full name in uppercase, service in lowercase, age category if age >= 65 then 'Senior', if age >= 18then 'Adult', else 'Minor'), and name length. Only show patients whose name length is greater than 10 characters.)

SELECT 
  CONCAT(
    patient_id,'-',
    UPPER(name), '-',
    LOWER(service), '-',
    CASE 
      WHEN age >= 65 THEN 'Senior'
      WHEN age >= 18 THEN 'Adult'
      ELSE 'Minor'
    END,'-',
	LENGTH(name)
  ) AS Patients_Summary
FROM patients
WHERE LENGTH(name) > 10;
